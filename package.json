{
  "main": "lib/index.js",
  "bin": {
    "blueflag-repo": "lib/index.js"
  },
  "files": [
    "lib"
  ],
  "name": "blueflag-repo",
  "version": "0.0.0",
  "description": "Repo Management",
  "license": "UNLICENSED",
  "author": "Allan Hortle",
  "repository": {
    "type": "git",
    "url": "git@github.com:blueflag/blueflag-repo.git"
  },
  "bugs": {
    "url": "https://github.com/blueflag/blueflag-repo/issues"
  },
  "private": true,
  "scripts": {
    "build": "rm -rf lib && babel src --out-dir lib",
    "build-examples": "cd example && yarn install && yarn run build && cd -",
    "deploy-to-gh-pages": "yarn run build && yarn run build-examples && yarn run docs && node scripts/publish.js",
    "prepublish": "yarn run build",
    "watch": "yarn run build -- -w",
    "ava": "NODE_ENV=test ava",
    "check-coverage": "NODE_ENV=test nyc check-coverage --branches 100.0  --functions 100.0 --lines 100.0",
    "docs": "jsdoc -c jsdoc.json",
    "flow": "flow check",
    "lint": "eslint src --ext js,jsx",
    "lint-fix": "eslint src --ext js,jsx --fix",
    "test": "NODE_ENV=test nyc --report-dir=./coverage ava && yarn run check-coverage",
    "test-all": "NODE_ENV=test yarn run lint && yarn run flow && yarn run test"
  },
  "devDependencies": {
    "app-module-path": "^2.2.0",
    "ava": "^0.22.0",
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.0",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-preset-blueflag": "^0.6.0",
    "babel-register": "^6.23.0",
    "dotenv": "4.0.0",
    "eslint": "^4.5.0",
    "eslint-config-blueflag": "^0.5.0",
    "flow-bin": "^0.53.1",
    "gh-pages": "^1.0.0",
    "git-url-parse": "^7.0.0",
    "jsdoc": "^3.4.3",
    "jsdoc-babel": "^0.3.0",
    "jsdoc-react-proptypes": "^1.0.2",
    "jsdonk": "^0.7.0",
    "nyc": "^11.1.0",
    "proxyquire": "^1.7.10",
    "sinon": "^3.2.1"
  },
  "ava": {
    "require": [
      "./pretest",
      "babel-register"
    ],
    "babel": {
      "presets": [
        "blueflag"
      ],
      "plugins": [
        "istanbul"
      ],
      "sourceMaps": "inline"
    },
    "files": [
      "src/**/*-test.js"
    ]
  },
  "nyc": {
    "all": true,
    "sourceMap": false,
    "instrument": false,
    "include": [
      "src/**"
    ],
    "exclude": [
      "src/**/*-test.js",
      "dist"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "extension": [
      ".js",
      ".jsx"
    ],
    "require": [
      "babel-register"
    ]
  },
  "dependencies": {
    "chalk": "^2.1.0",
    "commander": "^2.11.0",
    "fronads": "^0.9.0",
    "github": "^10.0.0",
    "gromit": "^0.0.10",
    "inquirer": "^3.2.2",
    "ora": "^1.3.0"
  }
}
